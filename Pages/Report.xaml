<UserControl
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Custodian.Model"
      xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
      xmlns:chartingToolkit="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit" x:Class="Custodian.Pages.Report"
      xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
      xmlns:chart="http://schemas.syncfusion.com/wpf"
      mc:Ignorable="d" 
      xmlns:pages="clr-namespace:Custodian.Pages"
      xmlns:convert="clr-namespace:Custodian.DALs.InterfaceService"
      d:DesignHeight="900" d:DesignWidth="1600">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="B2V"/>
        <convert:TextBoxToBrushConverter x:Key="txtConvert"/>
    </UserControl.Resources>

    <Grid>

        <Grid Panel.ZIndex="1">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="30">
                
                <Border BorderBrush="AntiqueWhite" BorderThickness="2" CornerRadius="40" Height="55" Width="55" Margin="10" Background="{StaticResource Gray46}">
                <RepeatButton Background="{StaticResource Gray26}" BorderThickness="2"
                    BorderBrush="{StaticResource Gray86}" Cursor="Hand" 
                    Height="55" Width="55" Click="RepeatButton_Click_1" Style="{StaticResource RepeatButtonStyle}">
                    <Image Source="pack://application:,,,/Resources/arrowUp.png" Margin="6,6,9,9" Height="40" Width="40"/>
                </RepeatButton>
                </Border>

                <Border BorderBrush="AntiqueWhite" BorderThickness="2" CornerRadius="40" Height="55" Width="55" Margin="10" Background="{StaticResource Gray46}">
                    <RepeatButton Background="{StaticResource Gray26}" BorderThickness="2"
                    BorderBrush="{StaticResource Gray86}"  Cursor="Hand" Style="{StaticResource RepeatButtonStyle}"
                    Height="55" Width="55" Click="RepeatButton_Click"   >
                    <Image Source="pack://application:,,,/Resources/arrowDown.png" Margin="3,3,7,7"/>
                </RepeatButton>
                </Border>

            </StackPanel>
        </Grid>
        <Border Style="{StaticResource StyleBackground}" Padding="10">

            <ScrollViewer VerticalScrollBarVisibility="Visible" x:Name="WindowScroll">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="260" MinHeight="260"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="270"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="10" MaxHeight="10" MinHeight="10"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="10" MaxHeight="10"/>
                        <RowDefinition Height="200" />
                        <RowDefinition Height="10" MaxHeight="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10" />
                    </Grid.RowDefinitions>

                    <GridSplitter Grid.Row="1" 
                      Height="10" Style="{StaticResource StyleSplitter}" 
                      HorizontalAlignment="Stretch" />
                    <GridSplitter Grid.Row="3" Height="10" Style="{StaticResource StyleSplitter}" 
                           HorizontalAlignment="Stretch"    />
                    <GridSplitter Grid.Row="5" 
                      Height="10" Style="{StaticResource StyleSplitter}" 
                      HorizontalAlignment="Stretch" />
                    <GridSplitter Grid.Row="7" 
                          Height="10" Style="{StaticResource StyleSplitter}"
                          HorizontalAlignment="Stretch"/>
                    <GridSplitter Grid.Row="9" 
                              Height="10" Style="{StaticResource StyleSplitter}" 
                              HorizontalAlignment="Stretch"/>
                    <GridSplitter Grid.Row="11" 
                              Height="10" Style="{StaticResource StyleSplitter}" 
                              HorizontalAlignment="Stretch"/>
                    <GridSplitter Grid.Row="13" 
                              Height="10" Style="{StaticResource StyleSplitter}" 
                              HorizontalAlignment="Stretch"/>


                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="300" MinWidth="100"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="310"/>
                        </Grid.ColumnDefinitions>

                        <GridSplitter Grid.Column="1" Width="10" VerticalAlignment="Stretch" HorizontalAlignment="Left"
                              Style="{StaticResource StyleSplitter}" />
                        <GridSplitter Grid.Column="3" Width="10" VerticalAlignment="Stretch" HorizontalAlignment="Left"
                              Style="{StaticResource StyleSplitter}" />
                        <Border Grid.Column="0" Grid.Row="0" Style="{StaticResource StyleMainBorder}" HorizontalAlignment="Stretch" >
                            <!--  -->

                            <Border Style="{StaticResource StyleInnerBorder}" >
                                <Grid  Background="#454545">
                                    <Label Content="SUMMARY" FontSize="12" Margin="0,0" Style="{StaticResource StyleComment}"
                                        Width="150" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                                    <Button Content=" Print PDF Report " Background="{StaticResource Gray26}" HorizontalAlignment="Right" 
                                 Width="103" Style="{StaticResource StyleButton}" Template="{StaticResource ButtonControlTemplate}" 
                                        Click="Button_Click" VerticalAlignment="Top"/>

                                    <Grid x:Name="OrderDetails" Margin="0,26,0,0" Background="#363636">

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Label Content="Contract Number" Style="{StaticResource StyleComment}" Grid.Row="0" Grid.Column="0" FontSize="14"/>
                                        <Label Content="{Binding Order}" Style="{StaticResource StyleLabel}" Grid.Row="0" Grid.Column="3" FontSize="14"/>

                                        <Label Content="Currency" Style="{StaticResource StyleComment}" Grid.Row="1" Grid.Column="0" FontSize="14"/>
                                        <Label Content="USD"  Style="{StaticResource StyleLabel}" Grid.Row="1" Grid.Column="1" FontSize="14"/>

                                        <Label Content="Status" Style="{StaticResource StyleComment}" Grid.Row="2" Grid.Column="0" FontSize="14"/>
                                        <Label Content="{Binding Status}" Style="{StaticResource StyleLabel}" Grid.Row="2" Grid.Column="1" FontSize="14"/>

                                        <Label Content="Subscription Date" Style="{StaticResource StyleComment}" Grid.Row="3" Grid.ColumnSpan="1" FontSize="14" />
                                        <Label Content="{Binding DateReg}"  Style="{StaticResource StyleLabel}" Grid.Row="3" Grid.Column="3" FontSize="14"/>

                                        <Label Content="Consultant" Style="{StaticResource StyleComment}" Grid.Row="4" Grid.ColumnSpan="2" FontSize="14"/>
                                        <Label Content="{Binding Adviser}"  Style="{StaticResource StyleLabel}" Grid.Row="4" Grid.Column="1" FontSize="14"/>
                                        <!-- <Label Content="{Binding Company}"  Style="{StaticResource StyleLabel}" Grid.Row="5" Grid.Column="1"/>-->
                                    </Grid>
                                </Grid>
                            </Border>
                        </Border>

                        <Border Grid.Column="2" Style="{StaticResource StyleMainBorder}" HorizontalAlignment="Stretch">

                            <Grid Background="{StaticResource Gray26}">
                                <Grid x:Name="Details" HorizontalAlignment="Stretch" Margin="1,1,1,1"
                            Style="{StaticResource StyleLabel}"  Background="#454545">

                                    <Label Content="CLIENT DETAILS" FontSize="12" HorizontalAlignment="Left" Style="{StaticResource StyleComment}"/>
                                    <Grid Background="#363636" Margin="0,27,0,0">
                                        <Label Content="Name" Margin="0,0,150,0" Style="{StaticResource StyleComment}" FontSize="14"/>
                                        <Label Content="Date of Birth" Margin="0,25,145,0" Style="{StaticResource StyleComment}" FontSize="14"/>
                                        <Label Content="{Binding FIO}" Margin="90,0,0,0"  Style="{StaticResource StyleLabel}"  FontSize="14"/>
                                        <Label Content="{Binding DateofBirth}" Margin="90,25,0,0" HorizontalAlignment="Left" FontSize="14" Width="143" Style="{StaticResource StyleLabel}"/>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Border>

                        <Border Grid.Column="4" Style="{StaticResource StyleMainBorder}" >
                            <DockPanel x:Name="FondSumm" >
                                <Label Content="CELL SUMMARY" Style="{StaticResource StyleTableHeader}" DockPanel.Dock="Top" />
                                <Grid >
                                    <DataGrid Style="{StaticResource StyleTable}" ItemsSource="{Binding Collection}" 
                  AutoGenerateColumns="False" RowHeight="24" GridLinesVisibility="None" FontSize="14" >
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Type" Width="0.4*" IsReadOnly="True"  Binding="{Binding Type}"/>
                                            <DataGridTextColumn Header="Balance" Width="100" IsReadOnly="True"  Binding="{Binding Balance}" />
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Grid>
                            </DockPanel>
                        </Border>

                    </Grid>

                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <GridSplitter Grid.Column="1" Style="{StaticResource StyleSplitter}"/>
                        <Grid Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>

                            <Grid Background="{StaticResource Gray46}">
                                <Label Content="RECOMMENDED PORTFOLIO" Style="{StaticResource StyleHeaderLabel}" FontFamily="{StaticResource MainFont}" FontSize="12" />
                                <!-- <Button Content="Risk Profile" Style="{StaticResource StyleOkButton}"  Template="{StaticResource ButtonControlTemplate}"  Margin="10,0" Padding="5,0" HorizontalAlignment="Right" /> -->
                            </Grid>
                            <Border Grid.Row="1" BorderBrush="{StaticResource Gray36}" BorderThickness="1">
                                <Grid x:Name="RecomendPort">
                                    <pages:RecomendPortfel/>
                                </Grid>
                            </Border>
                        </Grid>
                        <Grid Grid.Column="0">
                            <Border Grid.Column="4" BorderBrush="{StaticResource Gray36}" BorderThickness="1">
                                <Grid MinWidth="250" >
                                    <Grid.Resources>
                                        <Thickness x:Key="ChartMargin">45 10 0 10</Thickness>
                                        <Thickness x:Key="ChartMargin50">20 10 50 10</Thickness>
                                    </Grid.Resources>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Label Content="CURRENT PORTFOLIO" Style="{StaticResource StyleHeaderLabel}" Grid.Row="0"  FontSize="12" FontFamily="{StaticResource MainFont}" />

                                    <Grid Background="{StaticResource Gray36}"  Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="378*"/>
                                            <ColumnDefinition Width="137*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0" Margin="20" x:Name="CurrentPortfel">
                                            <syncfusion:SfChart x:Name="cInner" AreaBorderThickness="0">
                                                <syncfusion:PieSeries x:Name="sInner" EnableSmartLabels="True" Style="{StaticResource StyleDSeries}" 
                                      SegmentSelectionBrush="White" ShowTooltip="True" 
                                      XBindingPath="Name" YBindingPath="Value" 
                                      ItemsSource="{Binding CurrentISINs}" >
                                                    <syncfusion:PieSeries.ColorModel>
                                                        <syncfusion:ChartColorModel>
                                                            <syncfusion:ChartColorModel.CustomBrushes>
                                                                <SolidColorBrush Color="Red"/>
                                                                <SolidColorBrush Color="#FFC087"/>
                                                                <SolidColorBrush Color="#F98E3C"/>
                                                                <SolidColorBrush Color="#FFDEFF87"/>
                                                                <SolidColorBrush Color="#FF87FFB8"/>
                                                                <SolidColorBrush Color="#FF87C3FF"/>
                                                                <SolidColorBrush Color="#FF5949FF"/>
                                                                <SolidColorBrush Color="#FFFF87E9"/>
                                                                <SolidColorBrush Color="#FFBB275D"/>
                                                                <SolidColorBrush Color="#FF5DFF00"/>
                                                            </syncfusion:ChartColorModel.CustomBrushes>
                                                        </syncfusion:ChartColorModel>
                                                    </syncfusion:PieSeries.ColorModel>
                                                </syncfusion:PieSeries>

                                                <i:Interaction.Triggers>
                                                    <i:EventTrigger EventName="MouseMove">
                                                        <i:InvokeCommandAction Command="{Binding Path=ClickMouseP}" CommandParameter="{Binding ElementName=sInner, Path=SelectedIndex}"/>
                                                    </i:EventTrigger>
                                                </i:Interaction.Triggers>
                                                <syncfusion:SfChart.Behaviors>
                                                    <syncfusion:ChartSelectionBehavior SelectionCursor="Hand" SelectionMode="MouseMove"/>
                                                </syncfusion:SfChart.Behaviors>
                                            </syncfusion:SfChart>

                                            <syncfusion:SfChart x:Name="cMidder" AreaBorderThickness="0" Background="{x:Null}" IsHitTestVisible="False" >
                                                <syncfusion:DoughnutSeries x:Name="doughnutSeries2" Background="{x:Null}"
                                                   DoughnutCoefficient="0.5" DoughnutSize="0.8" ClipToBounds="False" 
                                                   EnableSmartLabels="True" LabelPosition="Outside"  ShowTooltip="True" 
                                                   XBindingPath="Name" SegmentSelectionBrush="White"
                                                   YBindingPath="Value" Style="{StaticResource StyleDSeries}" 
                                                   ItemsSource="{Binding DiagrammValueCollection}">
                                                    <syncfusion:DoughnutSeries.ColorModel>
                                                        <syncfusion:ChartColorModel>
                                                            <syncfusion:ChartColorModel.CustomBrushes>
                                                                <SolidColorBrush Color="Red"/>
                                                                <SolidColorBrush Color="#FFC087"/>
                                                                <SolidColorBrush Color="#F98E3C"/>
                                                                <SolidColorBrush Color="#FFDEFF87"/>
                                                                <SolidColorBrush Color="#FF87FFB8"/>
                                                                <SolidColorBrush Color="#FF87C3FF"/>
                                                                <SolidColorBrush Color="#FF5949FF"/>
                                                                <SolidColorBrush Color="#FFFF87E9"/>
                                                                <SolidColorBrush Color="#FFBB275D"/>
                                                                <SolidColorBrush Color="#FF5DFF00"/>
                                                            </syncfusion:ChartColorModel.CustomBrushes>
                                                        </syncfusion:ChartColorModel>
                                                    </syncfusion:DoughnutSeries.ColorModel>
                                                    <syncfusion:DoughnutSeries.AdornmentsInfo>
                                                        <syncfusion:ChartAdornmentInfo x:Name="vvv" LabelTemplate="{StaticResource LabelTemplate}"
                                                               ShowLabel="True" ShowConnectorLine="True" ConnectorHeight="30" 
                                                               AdornmentsPosition="Bottom" HorizontalAlignment="Center" 
                                                               VerticalAlignment="Center" ConnectorLineStyle="{DynamicResource StyleLine}" 
                                                               SegmentLabelContent="LabelContentPath" LabelPosition="Outer" UseSeriesPalette="True" />
                                                    </syncfusion:DoughnutSeries.AdornmentsInfo>
                                                </syncfusion:DoughnutSeries>
                                                <syncfusion:SfChart.Behaviors>
                                                    <syncfusion:ChartSelectionBehavior SelectionCursor="Hand"  SelectionMode="MouseMove"/>
                                                </syncfusion:SfChart.Behaviors>
                                            </syncfusion:SfChart>

                                            <syncfusion:SfChart x:Name="cOuter" AreaBorderThickness="0"
                            Background="{x:Null}" IsHitTestVisible="False" >
                                                <syncfusion:DoughnutSeries x:Name="doughnutSeries3" Style="{StaticResource StyleDSeries}"
                                                   SegmentSelectionBrush="White" ShowTooltip="True"
                                                   Label="Outer" DoughnutCoefficient="0.4" DoughnutSize="1" 
                                                   LabelPosition="Inside" XBindingPath="Name" YBindingPath="Value" 
                                                   ItemsSource="{Binding RiskActivesCollection}">
                                                    <syncfusion:DoughnutSeries.ColorModel>
                                                        <syncfusion:ChartColorModel>
                                                            <syncfusion:ChartColorModel.CustomBrushes>
                                                                <SolidColorBrush Color="#FFC087"/>
                                                                <SolidColorBrush Color="Red"/>
                                                                <SolidColorBrush Color="#F98E3C"/>
                                                                <SolidColorBrush Color="#FFDEFF87"/>
                                                                <SolidColorBrush Color="#FF87FFB8"/>
                                                                <SolidColorBrush Color="#FF87C3FF"/>
                                                                <SolidColorBrush Color="#FF5949FF"/>
                                                                <SolidColorBrush Color="#FFFF87E9"/>
                                                                <SolidColorBrush Color="#FFBB275D"/>
                                                                <SolidColorBrush Color="#FF5DFF00"/>
                                                            </syncfusion:ChartColorModel.CustomBrushes>
                                                        </syncfusion:ChartColorModel>
                                                    </syncfusion:DoughnutSeries.ColorModel>

                                                    <syncfusion:DoughnutSeries.AdornmentsInfo>
                                                        <syncfusion:ChartAdornmentInfo SegmentLabelContent="LabelContentPath" ShowLabel="True" 
                                                               LabelTemplate= "{StaticResource LabelTemplate2}"   
                                                               HorizontalAlignment="Center" VerticalAlignment="Center" 
                                                               AdornmentsPosition="Bottom" ConnectorHeight="50" LabelPosition="Auto"/>
                                                    </syncfusion:DoughnutSeries.AdornmentsInfo>

                                                </syncfusion:DoughnutSeries>
                                                <syncfusion:SfChart.Behaviors>
                                                    <syncfusion:ChartSelectionBehavior SelectionCursor="Hand" SelectionMode="MouseMove"  />
                                                </syncfusion:SfChart.Behaviors>
                                            </syncfusion:SfChart>
                                        </Grid>

                                        <Grid Grid.Column="1" x:Name="Legeng">
                                            <ScrollViewer  Margin="10">
                                                <ItemsControl Name="iLegend" >
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <StackPanel Orientation="Horizontal">
                                                                <Rectangle Fill="{Binding Value}" Width="8" Height="8"></Rectangle>
                                                                <TextBlock Text="{Binding Key.Name}" Margin="5,0,0,0" Foreground="{StaticResource Gray86}"></TextBlock>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </ScrollViewer>
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Border>

                        </Grid>

                    </Grid>

                    <Grid Grid.Row="4" Name="Moreinformation">
                        <pages:More_Info/>
                    </Grid>

                    <Grid Grid.Row="6">
                        <Border Style="{StaticResource StyleMainBorder}" Grid.Column="2">
                            <DockPanel Name="InvestDetails" >
                                <Label Content="INVESTMENT DETAILS" Style="{StaticResource StyleTableHeader}" DockPanel.Dock="Top" />
                                <Border BorderThickness="1,1,1,0" BorderBrush="#262626" Padding="0,2,0,0">
                                    <pages:Investment_Details Height="auto"/>
                                </Border>
                            </DockPanel>
                        </Border>
                    </Grid>

                    <Grid Grid.Row="8" x:Name="Chart">
                        <Border Style="{StaticResource StyleMainBorder}">
                            <Border Style="{StaticResource  StyleBackground}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="45"/>
                                        <RowDefinition Height="305"/>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="1" >
                                        <Grid x:Name="actives" Visibility="{Binding ElementName=ActivesRBTN, Path=IsChecked, Converter={StaticResource B2V}}">
                                             
                                            <chart:SfChart Palette="Custom" Grid.Row="1" Margin="0,5,10,0" 
                                   AreaBorderBrush="{StaticResource Gray46}" HorizontalAlignment="Center" 
                                   Foreground="#FFD43030" HorizontalContentAlignment="Stretch">
                                                <chart:SfChart.Resources>
                                                    
                                                    <DataTemplate x:Key="InvestBondsTooltipTemplate">
                                                        <Border Height="40" Background="White" Width="120" 
                                                            CornerRadius="4" BorderThickness="1" BorderBrush="Black">
                                                            <Grid Margin="5,0">
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="1*"/>
                                                                    <RowDefinition Height="1*"/>
                                                                </Grid.RowDefinitions>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="20"/>
                                                                </Grid.ColumnDefinitions>
                                                                <TextBlock Text="Investment-Grade Bonds" Grid.Row="0" Foreground="Black" FontFamily="{StaticResource MainFont}"/>
                                                                <TextBlock Text="{Binding YData}" Grid.Row="1"
                                                                           FontFamily="{StaticResource MainFont}">
                                                                    <TextBlock.Style>
                                                                        <Style TargetType="TextBlock">
                                                                            <Setter Property="Foreground" 
                                                                                    Value="{Binding Converter={StaticResource txtConvert}}"/>
                                                                        </Style>
                                                                    </TextBlock.Style>
                                                                </TextBlock>
                                                                <Image Grid.Row="1" Grid.Column="1" Tag="{Binding ElementName=TotPortxt, Path=Text}"
                                       Height="20" Width="20">
                                                                    <Image.Resources>
                                                                        <convert:TagToImageSourceConverter x:Key="imgConv"/>
                                                                    </Image.Resources>
                                                                    <Image.Style>
                                                                        <Style TargetType="Image">
                                                                            <Setter Property="Source" Value="{Binding Converter={StaticResource imgConv}}"/>
                                                                        </Style>
                                                                    </Image.Style>
                                                                </Image>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>

                                                    <DataTemplate x:Key="Speculative-GradeBondsTooltipTemplate">
                                                        <Border Height="40" Background="White" Width="120" 
                                                            CornerRadius="4" BorderThickness="1" BorderBrush="Black">
                                                            <Grid Margin="5,0">
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="1*"/>
                                                                    <RowDefinition Height="1*"/>
                                                                </Grid.RowDefinitions>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="20"/>
                                                                </Grid.ColumnDefinitions>
                                                                <TextBlock Text="Speculative-Grade Bonds" Grid.Row="0" Grid.Column="0"
                                                                           Foreground="Black" FontFamily="{StaticResource MainFont}"/>
                                                                <TextBlock Text="{Binding YData}" Grid.Row="1" Grid.Column="0"
                                                                           FontFamily="{StaticResource MainFont}">
                                                                    <TextBlock.Style>
                                                                        <Style TargetType="TextBlock">
                                                                            <Setter Property="Foreground" 
                                                                                    Value="{Binding Converter={StaticResource txtConvert}}"/>
                                                                        </Style>
                                                                    </TextBlock.Style>
                                                                </TextBlock>
                                                                <Image Grid.Row="1" Grid.Column="1" Tag="{Binding ElementName=TotPortxt, Path=Text}"
                                                                    Height="20" Width="20">
                                                                    <Image.Resources>
                                                                        <convert:TagToImageSourceConverter x:Key="imgConv"/>
                                                                    </Image.Resources>
                                                                    <Image.Style>
                                                                        <Style TargetType="Image">
                                                                            <Setter Property="Source" Value="{Binding Converter={StaticResource imgConv}}"/>
                                                                        </Style>
                                                                    </Image.Style>
                                                                </Image>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>

                                                    <DataTemplate x:Key="CreditLinkedNotesTooltipTemplate">
                                                        <Border Height="40" Background="White" Width="120" 
                                                            CornerRadius="4" BorderThickness="1" BorderBrush="Black">
                                                            <Grid Margin="5,0">
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="1*"/>
                                                                    <RowDefinition Height="1*"/>
                                                                </Grid.RowDefinitions>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="20"/>
                                                                </Grid.ColumnDefinitions>
                                                                <TextBlock Text="Credit Linked Notes" Grid.Row="0" Grid.Column="0"
                                                                           Foreground="Black" FontFamily="{StaticResource MainFont}"/>
                                                                <TextBlock Text="{Binding YData}" Grid.Row="1" Grid.Column="0"
                                                                           FontFamily="{StaticResource MainFont}">
                                                                    <TextBlock.Style>
                                                                        <Style TargetType="TextBlock">
                                                                            <Setter Property="Foreground" Value="{Binding Converter={StaticResource txtConvert}}"/>
                                                                        </Style>
                                                                    </TextBlock.Style>
                                                                </TextBlock>
                                                                <Image Grid.Row="1" Grid.Column="1" Tag="{Binding ElementName=TotPortxt, Path=Text}"
                                                                Height="20" Width="20">
                                                                    <Image.Resources>
                                                                        <convert:TagToImageSourceConverter x:Key="imgConv"/>
                                                                    </Image.Resources>
                                                                    <Image.Style>
                                                                        <Style TargetType="Image">
                                                                            <Setter Property="Source" Value="{Binding Converter={StaticResource imgConv}}"/>
                                                                        </Style>
                                                                    </Image.Style>
                                                                </Image>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>

                                                    <DataTemplate x:Key="SNGCTooltipTemplate">
                                                        <Border Height="40" Background="White" Width="170" 
                                                            CornerRadius="4" BorderThickness="1" BorderBrush="Black">
                                                            <Grid Margin="5,0">
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="1*"/>
                                                                    <RowDefinition Height="1*"/>
                                                                </Grid.RowDefinitions>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="20"/>
                                                                </Grid.ColumnDefinitions>
                                                                <TextBlock Text="Structured Notes with guaranteed coupon" Grid.Column="0"
                                                                           Grid.Row="0" Foreground="Black" FontFamily="{StaticResource MainFont}"/>
                                                                <TextBlock Text="{Binding YData}" Grid.Row="1" Grid.Column="0"
                                                                           FontFamily="{StaticResource MainFont}">
                                                                    <TextBlock.Style>
                                                                        <Style TargetType="TextBlock">
                                                                            <Setter Property="Foreground" Value="{Binding Converter={StaticResource txtConvert}}"/>
                                                                        </Style>
                                                                    </TextBlock.Style>
                                                                </TextBlock>
                                                                <Image Grid.Row="1" Grid.Column="1" Tag="{Binding ElementName=TotPortxt, Path=Text}"
                                                                Height="20" Width="20">
                                                                    <Image.Resources>
                                                                        <convert:TagToImageSourceConverter x:Key="imgConv"/>
                                                                    </Image.Resources>
                                                                    <Image.Style>
                                                                        <Style TargetType="Image">
                                                                            <Setter Property="Source" Value="{Binding Converter={StaticResource imgConv}}"/>
                                                                        </Style>
                                                                    </Image.Style>
                                                                </Image>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>

                                                    <DataTemplate x:Key="SNCCTooltipTemplate">
                                                        <Border Height="40" Background="White" Width="170" 
                                                            CornerRadius="4" BorderThickness="1" BorderBrush="Black">
                                                            <Grid Margin="5,0">
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="1*"/>
                                                                    <RowDefinition Height="1*"/>
                                                                </Grid.RowDefinitions>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="20"/>
                                                                </Grid.ColumnDefinitions>
                                                                <TextBlock Text="Structured Notes with conditional coupon" Grid.Column="0"
                                                                           Grid.Row="0" Foreground="Black" FontFamily="{StaticResource MainFont}"/>
                                                                <TextBlock Text="{Binding YData}" Grid.Row="1" Grid.Column="0"
