                                                    <CheckBox x:Name="Port_classics_pictures" Width="150"  Content="Classics Art" Click="Resize_dynamic" Style="{StaticResource StyleInput}" Foreground="{StaticResource Gray86}" Template="{DynamicResource TemplateCheckBox}"/>
                                                    <Ellipse Fill="{Binding Path=Colors.modern_pictures_color}" Width="10" Height="10" Margin="0,0,0,13"/>
                                                    <CheckBox x:Name="Port_modern_pictures" Width="150"  Content="Modern Art" Click="Resize_dynamic" Style="{StaticResource StyleInput}" Foreground="{StaticResource Gray86}" Template="{DynamicResource TemplateCheckBox}"/>
                                                    <Ellipse Fill="{Binding Path=Colors.marks_color}" Width="10" Height="10" Margin="0,0,0,13"/>
                                                    <CheckBox x:Name="Port_marks" Width="150" Content="Stamps, Coins"  Click="Resize_dynamic"  Style="{StaticResource StyleInput}" Foreground="{StaticResource Gray86}" Template="{DynamicResource TemplateCheckBox}"/>
                                                </StackPanel>


                                            </StackPanel>
                                        </Grid>

                                        <Grid Visibility="{Binding ElementName=TotalRBTN, Path=IsChecked, Converter={StaticResource B2V}}">
                                            <StackPanel Orientation="Horizontal" Margin="15">
                                                <Ellipse Fill="{Binding Path=Colors.Totaal_POrtfel_color}" Width="10" Height="10" Margin="0,0,0,13"/>
                                                <CheckBox x:Name="total" Content="Total Portfolio" Width="150" IsChecked="True" Style="{StaticResource StyleInput}" Foreground="{StaticResource Gray86}" Template="{DynamicResource TemplateCheckBox}" />
                                            </StackPanel>
                                        </Grid>
                                    </Grid>



                                </Grid>
                            </Border>
                        </Border>
                    </Grid>

                    <Grid Grid.Row="10" x:Name="Onflo_Outflow">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <Border Style="{StaticResource StyleMainBorder}" Grid.Column="0">
                            <Grid>
                                <Label Content="INFLOW OPERATIONS" Margin="5" Height="34" Width="140" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                                <Border Margin="5,30,5,5" Style="{StaticResource StyleBorder86}">
                                    <DataGrid ItemsSource="{Binding InflowDetailsCollection}"  
                                                  AutoGenerateColumns="False" x:Name="FundingTools" 
                                                  Style="{StaticResource StyleTable}" >
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Title" MinWidth="100" Width="*" Binding="{Binding CashAccount}">
                                            </DataGridTextColumn>
                                            <DataGridTextColumn Header="Security" Binding="{Binding aqprice}" Width="*">
                                            </DataGridTextColumn>
                                            <DataGridTextColumn Header="ISIN" Binding="{Binding CashAccSumm}" Width="*">
                                            </DataGridTextColumn>
                                            <DataGridTextColumn Header="Aq. Price" Binding="{Binding countPaper}" Width="*">
                                            </DataGridTextColumn>
                                            <DataGridTextColumn Header="Units" Binding="{Binding Isin}" Width="*">
                                            </DataGridTextColumn>
                                            <DataGridTextColumn Header="Data" Binding="{Binding date}" Width="*">
                                            </DataGridTextColumn>
                                            <DataGridTextColumn Header="Security" Binding="{Binding security}" Width="*">
                                            </DataGridTextColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Border>
                            </Grid>
                        </Border>
                        <GridSplitter Grid.Column="1" Width="10" Style="{StaticResource StyleSplitter}" HorizontalAlignment="Stretch"  />
                        <Border Style="{StaticResource StyleMainBorder}" Grid.Column="3">
                            <Grid>
                                <Label Content="OUTFLOW OPERATIONS" Height="34" Margin="5" Width="148" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                                <Border Style="{StaticResource StyleBorder86}" Margin="5,30,5,5">
                                    <DataGrid x:Name="DGWithdraw" ItemsSource="{Binding WithdrawDetailsCollection}" 
                                              AutoGenerateColumns="False"
                                              Style="{StaticResource StyleTable}">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Summary" Binding="{Binding Summ}" Width="240" />
                                            <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="*"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Border>
                            </Grid>
                        </Border>
                    </Grid>

                    <Border x:Name="Statements"  Grid.Row="12" Style="{StaticResource StyleMainBorder}">
                        <Grid x:Name="Statement" Height="Auto">
                            <Label Content="STATEMENT" HorizontalAlignment="Center" VerticalAlignment="Top" Height="22" Width="140"/>
                            <Label Content="{Binding FromDat}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,32,55,1" Height="22" Width="140"/>
                            <Label Content="{Binding ToDat}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,32,-100,1" Height="22" Width="140"/>

                            <Border Style="{StaticResource StyleBorder86}" Margin="0,50,0,0">

                                <DataGrid Margin="5" x:Name="StatementDG" ItemsSource="{Binding OperationsCollection}" 
                                               AutoGenerateColumns="False" Height="Auto" IsReadOnly="True"
                                               Style="{StaticResource StyleTable}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="240" />
                                        <DataGridTextColumn Header="ISIN" Binding="{Binding isin}" Width="200"/>
                                        <DataGridTextColumn Header="Currency" Binding="{Binding value}" Width="100"/>
                                        <DataGridTextColumn Header="Value" Binding="{Binding money}" Width="100"/>

                                        <DataGridTextColumn Header="Aq. Price" Binding="{Binding Aqprice}" Width="100"/>
                                        <DataGridTextColumn Header="Units" Binding="{Binding Units}" Width="100"/>

                                        <DataGridTextColumn Header="Data" Binding="{Binding date}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Border>
                        </Grid>
                    </Border>

                </Grid>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
